{
  "manifest_version": 3,
  "name": "Privacy Policy Reader",
  "version": "0.3.0",
  "description": "Summarize privacy policies in clear language.",
  "action": { "default_popup": "popup/popup.html" },
  "options_page": "options/options.html",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
